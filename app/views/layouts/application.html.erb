    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="SQLHelp">
        <meta name="viewport" content="width=device-width">

        <style>
            body {
                padding-top: 50px;
                padding-bottom: 20px;
            }
        </style>
        <title><%= full_title( yield(:title)) %></title>
        <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <%= stylesheet_link_tag    "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css",
            "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css",
            "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <%= render 'layouts/shim' %>
    </head>
    <body>

        <%= render 'layouts/header' %>

        <%= yield %>

        <%= render 'layouts/footer' %>
    </body>
</html>
